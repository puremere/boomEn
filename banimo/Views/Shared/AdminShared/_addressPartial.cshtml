@model banimo.AdminPanel.ViewModel.AddressVM

<style>

    .Itemholderr {
        box-shadow: 0 1px 6px rgba(0, 0, 0, 0.3);
        border: 1px solid #ddd;
        border-radius: 5px;
        margin-bottom: 25px;
        cursor: pointer;
    }

        .Itemholderr .itemtitle {
            font-weight: 700;
        }

        .Itemholderr .itemvalue {
            margin-right: 10px;
        }

        .Itemholderr .Item {
            padding: 10px;
            text-align: right;
            border-bottom: 1px solid #ddd;
            padding-bottom: 10px;
        }

            .Itemholderr .Item p {
                display: inline-block;
                text-align: right;
                direction: rtl
            }
</style>

<div class="row">
    <div style="overflow-x:auto;padding:10px">
        <div class="panel panel-default">
            <div class="panel-heading" style="    background-image: -webkit-linear-gradient(top,#2a85ae 0,#246388 100%) !important;
    background-image: -o-linear-gradient(top,#2a85ae 0,#246388 100%) !important;
    background-image: -webkit-gradient(linear,left top,left bottom,from(#2a85ae),to(#246388)) !important;
    background-image: linear-gradient(to bottom,#2a85ae 0,#246388 100%) !important;color: #fff">
                <form method="post" id="getPDF" action="/Admin/createUserReport">
                    <input name="data" hidden />
                    <input name="id" hidden />
                    <input value="user" name="type" hidden />
                    <h3 class="panel-title"><i class="fa fa-home fa-fw"></i> آدرس های کاربر      </h3>

                </form>

            </div>
            <div class="panel-body">
                <div id="morris-area-chart">
                    <div style="overflow:auto;direction:rtl; margin-right:1px">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>ردیف</th>
                                    <th>عنوان </th>
                                    <th>استان </th>
                                    <th>شهر</th>
                                    <th>آدرس</th>
                                    <th>کد پستی</th>


                                </tr>
                            </thead>
                            <tbody style="">
                                @foreach (var item in Model.address)
                                {
                                   
                                    int i = Model.address.IndexOf(item) + 1;

                                <tr class="itemdetail" style="cursor:pointer ">
                                    <td>@i</td>
                                    <td>@item.title</td>
                                    <td>@item.state</td>
                                    <td>@item.city</td>
                                    <td>@item.address</td>
                                    <td>@item.postalCode</td>


                                </tr>
                                }



                            </tbody>
                        </table>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
