                            <div class="row PRDDIVID" id=@DIVID style="display:none">
                               @*این دو صرفاً برای استفاده در jquery می باشند*@
                                <p id=@titleholder style="display: none">@item.title</p>
                                <p id=@colorholder style="display:none">@item.color</p>
                                @*این دو صرفاً برای استفاده در jquery می باشند*@



                                <div class="row" style="display:none">
                                    <input value=@item.ID style="width:200px; display: inline-block; float: right; text-align: right;" type="text" name="productid">
                                </div>

                                <div class="row" style="direction:ltr; margin: 15px">
                                    <label class="col-lg-4" style="display :inline-block; float:right; text-align:right; margin-top:15px">:نام محصول</label>
                                    <input id=@PRname  class="productprice input " type="text" name="productname">
                                </div>
                               

                                <div class="row" style="direction:ltr; margin: 15px">
                                    <label class="col-lg-4" style="display: inline-block; float: right; text-align: right; margin-top: 15px">:قیمت پایه محصول</label>
                                    <input id=@PRprice value=@item.productprice class=" productprice input"  name="productprice">
                                </div>
                                <div class="row" style="direction:ltr; margin: 15px">
                                    <label class="col-lg-4" style="display: inline-block; float: right; text-align: right; margin-top: 15px">:قیمت نهایی محصول</label>
                                    <input id=@PRpricenow value=@item.PriceNow class="input" name="productpricenow">
                                </div>
                                <div class="row" style="direction:ltr; margin: 15px">
                                    <label class="col-lg-4" style="display :inline-block; float:right; text-align:right; margin-top:15px">:درصد تخفیف</label>
                                    <input id=@PRdiscount value=@item.discount class="input" type="text" name="productdiscount">
                                </div>
                                <div class="row" style="direction:ltr; margin: 15px">
                                    <label class="col-lg-4" style="display :inline-block; float:right; text-align:right; margin-top:15px">:رنگ</label>
                                    <input id=@PRcolor  class="input" type="text" name="productcolor">
                                </div>

                                <div class="row" style="direction:ltr; margin: 15px">
                                    <label class="col-lg-4" style="display: inline-block; float: right; text-align: right; margin-top: 15px">:شماره گروه محصول</label>
                                    <input id=@PRsetid value=@item.SetId class=" productsetid input"  name="productsetid">
                                </div>
                                <div class="row" style="direction:ltr; margin: 15px">
                                    <label class="col-lg-4" style="display: inline-block; float: right; text-align: right; margin-top: 15px">:توضیحات محصول</label>
                                    <textarea cols="40" rows="5" id=@PRdesc style="float:right; text-align:right" name="productdesc">@item.description</textarea>
                                </div>

                                <div class="row" style="direction:ltr; margin: 15px">
                                    <label class="col-lg-4" style="display: inline-block; float: right; text-align: right; margin-top: 15px">:عکس های محصول مورد نظر را انتخاب کنید</label>
                                    <input id=@PRfileupload class="sub fileupload" style="display: inline-block; float: right" type="file" name="files[]" multiple="multiple" accept="image/*">
                                </div>

                                <div class="row" style="margin: 15px">
                                    <p id=@PRsubmit class="sub editproduct" style="width:100px; text-align:center">تایید</p>
                                </div>
                                <script>
                                     var id = @item.ID ;
                                     var titileH = "titleholder" + id;
                                     var colorH = "colorholder" + id;
                                     var titleinput = "productname" + id;
                                     var colorinput = "productcolor" + id;
                                     $("#"+ titleinput).val($("#" + titileH).text())
                                     $("#"+ colorinput).val($("#" + colorH).text())


                                </script>

                            </div>
                    }

}


                </div>

         

