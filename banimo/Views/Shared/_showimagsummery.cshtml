@model IEnumerable<banimo.ViewModel.earlydatumfinal>




                <div class=" row" style="padding-bottom:10px; margin:15px 5px 0px 0px; border-bottom:1px solid #bbb">
                    @foreach (var item in @Model)
                        {
                        var ID = "PRID" + item.ID;
                        
